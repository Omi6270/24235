<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ImageSliderApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary color theme -->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryVariant">#303F9F</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary color theme -->
        <item name="colorSecondary">#FF4081</item>
        <item name="colorSecondaryVariant">#F50057</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Background and surface colors -->
        <item name="android:colorBackground">#F0F0F0</item>
        <item name="colorSurface">#FFFFFF</item>

        <!-- Typography -->
        <item name="android:textViewStyle">@style/ImageSliderTextViewStyle</item>
    </style>

    <!-- Custom TextView style for the app -->
    <style name="ImageSliderTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- CardView style for image slider items -->
    <style name="ImageSliderCardViewStyle" parent="CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
    </style>
</resources>